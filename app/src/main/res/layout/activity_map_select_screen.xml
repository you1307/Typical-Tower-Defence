<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapSelectScreen">

    <ImageView
        android:id="@+id/MapOneImg"
        android:layout_width="99dp"
        android:layout_height="174dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="mapSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/map_one_no_plots" />

    <ImageView
        android:id="@+id/MapTwoImg"
        android:layout_width="99dp"
        android:layout_height="174dp"
        android:layout_marginStart="16dp"
        android:onClick="mapSelected"
        app:layout_constraintBottom_toBottomOf="@+id/MapOneImg"
        app:layout_constraintStart_toEndOf="@+id/MapOneImg"
        app:layout_constraintTop_toTopOf="@+id/MapOneImg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/map_two_no_plots" />

    <ImageView
        android:id="@+id/MapThreeImg"
        android:layout_width="99dp"
        android:layout_height="174dp"
        android:layout_marginStart="128dp"
        android:onClick="mapSelected"
        app:layout_constraintBottom_toBottomOf="@+id/MapOneImg"
        app:layout_constraintStart_toEndOf="@+id/MapOneImg"
        app:layout_constraintTop_toTopOf="@+id/MapOneImg"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/map_three_no_plots" />
</androidx.constraintlayout.widget.ConstraintLayout>